<h1>Listing grids</h1>

<%= will_paginate @grids %>
<table>
  <thead>
    <tr>
      <th>Band</th>
      <th>Grid Square</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @grids.each do |grid| %>
      <tr>
        <td><%= grid.band %></td>
        <td><%= grid.grid_square %></td>
        <td><%= grid.status %></td>
        <!--
        <td><%= link_to 'Show', grid %></td>
        <td><%= link_to 'Edit', edit_grid_path(grid) %></td>
        <td><%= link_to 'Destroy', grid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>

